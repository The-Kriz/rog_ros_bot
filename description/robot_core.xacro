<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="base_link"/>   <!--base_footprint -->

    <xacro:property name="base_constant" value="0.08333333333333333"/>
    <xacro:property name="base_mass"     value="1.0"/>
    <xacro:property name="base_width"    value="0.23"/>
    <xacro:property name="base_height"   value="0.048"/>
    <xacro:property name="base_depth"    value="0.16"/>

    <xacro:property name="wheel_constant"   value="0.08333333333333333"/>
    <xacro:property name="wheel_mass"       value="0.5"/>
    <xacro:property name="wheel_radius"     value="0.0425"/>
    <xacro:property name="wheel_height"     value="0.04"/>


    <link name="chassis">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="5.0"/>
            <inertia
                ixx="${base_constant * base_mass * (base_height*base_height + base_depth*base_depth)}" ixy="0.0" ixz="0.0"
                iyy="${base_constant * base_mass * (base_width*base_width   + base_depth*base_depth)}" iyz="0.0"
                izz="${base_constant * base_mass * (base_width*base_width   + base_height*base_height)}"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.23 0.16 0.048"/>
            </geometry>
            <material name="">
                <color rgba="1.0 1.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.23 0.16 0.048"/>
            </geometry>
        </collision>
    </link>

    <gazebo reference = "chassis">
        <material>Gazebo/Yellow</material> 
    </gazebo>

    <joint name="chassis_joint" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="chassis"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>



    <!-- All Wheel links and joints -->


    <xacro:macro name="wheel" params="name x y">

        <link name="wheel_${name}_link">
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <mass value="${wheel_mass}"/>
                <inertia
                    ixx="${wheel_constant * wheel_mass * (3 * wheel_radius * wheel_radius + wheel_height * wheel_height)}" ixy="0.0" ixz="0.0"
                    iyy="${wheel_constant * wheel_mass * (3 * wheel_radius * wheel_radius + wheel_height * wheel_height)}" iyz="0.0" 
                    izz="${wheel_constant * wheel_mass * wheel_radius * wheel_radius}"/>
            </inertial>
            <visual name="">
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.0425" length="0.04"/>
                </geometry>
                <material name="black">
                    <color rgba=".0 .0 0.0 1.0"/>
                </material>
            </visual>
            <collision>
                    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                    <geometry>
                        <cylinder radius="0.0425" length="0.04"/>
                    </geometry>
            </collision>
        </link>

        <gazebo reference = "wheel_${name}_link">
            <material>Gazebo/Black</material> 
        </gazebo>

        <joint name="wheel_${name}_joint" type="continuous">
            <origin xyz="${x} ${y} -0.007" rpy="1.57 0.0 0.0"/>
            <parent link="chassis"/>
            <child link="wheel_${name}_link"/>
            <axis xyz=".0 .0 1.0"/>
            <limit effort="10000" velocity="1000" />
	        <dynamics damping="1.0" friction="1.0" />
        </joint>

    </xacro:macro>

    <xacro:wheel name="front_left"  x="0.085" y =" 0.105"/>
    <xacro:wheel name="rear_left" x="-0.085" y =" 0.105"/>
    <xacro:wheel name="rear_right"  x="-0.085" y =" -0.105"/>
    <xacro:wheel name="front_right"   x="0.085" y =" -0.105"/>

</robot>